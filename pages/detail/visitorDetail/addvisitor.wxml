<!--pages/detail/visitorDetail/addvisitor.wxml-->
<view>
  <form bindsubmit='formSubmit'>
    <van-cell-group>
      <van-field
          value="{{ name }}"
          required
          name="name"
          label="姓名"
          placeholder="请输入姓名"
          :rules="[{ required: true, message: '请输入姓名' }]"
        />
        <van-field
          value="{{ phone }}"
          required
          name="phone"
          label-class="enter_label"
          label="手机号"
          type="tel"
          placeholder="请输入手机号"
        />
        <van-field
          value="{{ company }}"
          name="company"
          label-class="enter_label"
          label="公司名称"
          placeholder="请输入公司名称"
        />
        <van-field
          readonly
          required
          clickable
          value="{{visitDate}}"
          label-class="enter_label"
          label="拜访时间"
          placeholder="请选择拜访时间"
          is-link
          bind:tap="showVisitDateMethod"
        />
        <!-- 选择拜访时间弹出层 -->
        <van-popup 
          show="{{ showVisitDate }}"
          round 
          bind:close="onClose"
          position="bottom">
          <van-datetime-picker
            item-height='45'
            visible-item-count='4'
            value="{{ currentDate }}"
            min-date="{{ minDate }}"
            max-date="{{ maxDate }}"
            formatter="{{ formatter }}"
            bind:cancel = "onClose"
            bind:confirm = "confirmVisitDateMethod"
            title="请选择拜访时间"
          />
        </van-popup>
        <van-field
          readonly
          required
          clickable
          label="拜访人员"
          name="personnelId"
          value="{{personnelName}}"
          label-class="enter_label"
          placeholder="请选择拜访人员"
          is-link
          bind:tap="showPersonnelMethod"
        />
        <!-- 拜访人员列表弹出层 -->
          <van-popup 
            show="{{ showPersonnel }}"
            round 
            bind:close="onClose"
            position="bottom">
            <van-picker
              item-height='45'
              visible-item-count='4'
              title="请选择拜访人员"
              columns="{{columns_name}}"
              show-toolbar
              bind:cancel = "onClose"
              bind:confirm = "confirmPersonnelMethod"
            />
          </van-popup>
    </van-cell-group>
    <view class="submit_btn">
        <van-button block round type="info"  form-type='submit'>
          提交
        </van-button>
    </view>
  </form>
</view>
